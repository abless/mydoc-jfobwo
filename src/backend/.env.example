NODE_ENV=development
PORT=5000
API_PREFIX=/api

# Database Configuration - MongoDB v6.0+
MONGODB_URI=mongodb://localhost:27017/health-advisor

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRATION=1h
REFRESH_TOKEN_EXPIRATION=7d

# External Service Integration
# LLM Provider (OpenAI/Azure OpenAI) - v1.0.0
LLM_PROVIDER_API_KEY=your-llm-provider-api-key-here
LLM_PROVIDER_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4

# Security
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=info

# File Storage (optional)
# S3_BUCKET_NAME=health-advisor-files
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-s3-access-key
# S3_SECRET_KEY=your-s3-secret-key

# Email Service (optional)
# EMAIL_SERVICE=sendgrid
# EMAIL_API_KEY=your-email-api-key
# EMAIL_FROM=noreply@healthadvisor.com